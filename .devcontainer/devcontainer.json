{
  "name": "Packer Examples for vSphere",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/packer-asdf": "1.12.0",
    "ghcr.io/devcontainers/features/powershell": "7.4.6",
    "ghcr.io/devcontainers/features/terraform": "1.9.8",
    "ghcr.io/gickis/devcontainer-features/gomplate": "4.1.0"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "GitHub.remotehub",
        "GitHub.vscode-pull-request-github",
        "GitLab.gitlab-workflow",
        "esbenp.prettier-vscode",
        "hashicorp.hcl",
        "hashicorp.terraform",
        "ms-vscode.powershell",
        "redhat.ansible",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode-remote.remote-containers",
        "DavidAnson.vscode-markdownlint",
        "marvhen.reflow-markdown"
      ]
    }
  }
}
